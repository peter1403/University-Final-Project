<div class="userInfoBox">
  <div class="userInfoBlock">
    <div class="userInfoBlockSection">
          <% if @user.profile_picture? %>
            <div class="indexPic viewFullSize">
              <img src="<%= @user.profile_picture.url(:thumb) %>">
            </div>
          <% else %>
            <div class="indexPic">
              No profile picture
            </div>
          <% end %>
        <div class="userInfo">
          <div class="infoTitle">
            <h3><%= @user.username %></h3>
          </div>
          <div class="infoDesc" style="height: 85%;">
            <p><%= @user.description %></p>
          </div>
        </div>
    </div>
    <%= render 'follow_form' if logged_in? %>
  </div>
  <div class="userInfoBlock">
    <%= link_to following_user_path(@user) do %>
      <div class="userInfoButton modalClick"><h3><%= @user.following.count %> following</h3></div>
    <% end %>
    <%= link_to followers_user_path(@user) do %>
      <div class="userInfoButton modalClick"><h3><%= @user.followers.count %> followers</h3></div>
    <% end %>
    <% if logged_in? && current_user?(@user) %>
      <%= link_to edit_user_url(current_user) do %>
        <div class="userInfoButton modalClick"><h3>Edit User</h3></div>
      <% end %>
      <%= link_to logout_url, method: "delete" do %>
        <div class="userInfoButton"><h3>Logout</h3></div>
      <% end %>
    <% end %>
  </div>
</div>
